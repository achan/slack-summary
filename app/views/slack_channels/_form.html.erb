<%= form_with(model: channel, url: channel.persisted? ? workspace_slack_channel_path(workspace, channel) : workspace_slack_channels_path(workspace)) do |f| %>
  <% if channel.errors.any? %>
    <div class="bg-red-50 border border-destructive rounded-md px-4 py-3 mb-4 text-destructive text-sm">
      <ul class="list-disc pl-5">
        <% channel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if channel.new_record? && available_channels.any? %>
    <div class="mb-4">
      <%= f.label :channel_id, "Channel", class: "block text-sm font-semibold mb-1" %>
      <%= f.select :channel_id,
            options_for_select(available_channels),
            { include_blank: "Select a channel..." },
            required: true,
            onchange: "this.form.requestSubmit()",
            class: "w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent" %>
    </div>
  <% elsif channel.persisted? %>
    <div class="mb-4">
      <%= f.label :active, class: "inline-flex items-center gap-2 text-sm font-semibold" %>
      <%= f.check_box :active, class: "rounded border-border" %>
    </div>

    <div class="flex gap-3 mt-6">
      <%= f.submit class: "inline-flex items-center px-4 py-2 text-sm font-medium text-primary-foreground bg-primary rounded-md hover:bg-primary/90 cursor-pointer" %>
      <%= link_to "Cancel", root_path,
            class: "inline-flex items-center px-4 py-2 text-sm font-medium border border-border rounded-md hover:bg-accent" %>
    </div>
  <% end %>
<% end %>
