<%= turbo_frame_tag "add_channel_#{@workspace.id}" do %>
  <% if @available_channels.any? %>
    <%= form_with url: workspace_slack_channels_path(@workspace), scope: :slack_channel, data: { turbo_frame: "_top" }, class: "flex items-center gap-2 mt-3" do |f| %>
      <%= f.select :channel_id,
            options_for_select(@available_channels),
            { include_blank: "Select a channel..." },
            required: true,
            class: "px-3 py-1.5 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent" %>
      <%= f.submit "Add Channel",
            class: "inline-flex items-center px-3 py-1.5 text-xs font-medium text-primary-foreground bg-primary rounded-md hover:bg-primary/90 cursor-pointer" %>
    <% end %>
  <% end %>
<% end %>
